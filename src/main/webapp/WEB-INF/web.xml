<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Servlet list -->
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>fa.training.servlet.EmployeeServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employee/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarServlet</servlet-name>
        <servlet-class>fa.training.servlet.CarServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CarServlet</servlet-name>
        <url-pattern>/car/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookingOfficeServlet</servlet-name>
        <servlet-class>fa.training.servlet.BookingOfficeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BookingOfficeServlet</servlet-name>
        <url-pattern>/bookingOffice/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ParkingLotServlet</servlet-name>
        <servlet-class>fa.training.servlet.ParkingLotServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ParkingLotServlet</servlet-name>
        <url-pattern>/parkingLot/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>fa.training.servlet.TicketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TripServlet</servlet-name>
        <servlet-class>fa.training.servlet.TripServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TripServlet</servlet-name>
        <url-pattern>/trip/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fa.training.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>fa.training.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>